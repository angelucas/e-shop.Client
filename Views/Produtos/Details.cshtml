@model e_shop.Client.Models.Produto

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container">
    <h3>Detalhes do produto: </h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <dl>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.ProdutoId):
                </dt>
                <dd class="col-md-10">
                    @Html.DisplayFor(model => model.ProdutoId)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Nome):
                </dt>
                <dd class="col-md-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Tamanho):
                </dt>
                <dd class="col-md-10">
                    @Html.DisplayFor(model => model.Tamanho)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Colecao):
                </dt>
                <dd class="col-md-10">
                    @Html.DisplayFor(model => model.Colecao)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Descricao):
                </dt>
                <dd class="col-md-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Preco):
                </dt>
                <dd class="col-md-10">
                    @Html.DisplayFor(model => model.Preco)
                </dd>
            </dl>
        </div>
        <div class="col">
            <img src="@Html.DisplayFor(model => model.ImagemUrl)" class="img-thumbnail" alt="">
        </div>
    </div>
    <div>
        @Html.ActionLink("Editar", "Update", new { id = Model.ProdutoId }, new { @class = "btn btn-outline-success" })
        <a asp-action="List" type="button" class="btn btn-outline-dark">Voltar</a>
    </div>
</div>
