@model e_shop.Client.Models.Produto

@{
    ViewData["Title"] = "Atualizar";
}

<div class="container">
    <h2>Atualiza produto: </h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <input asp-for="ProdutoId" class="form-control" />
                    <span asp-validation-for="ProdutoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" value="@Model.Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tamanho" class="control-label"></label>
                    <input asp-for="Tamanho" class="form-control" value="@Model.Tamanho" />
                    <span asp-validation-for="Tamanho" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Colecao" class="control-label"></label>
                    <input asp-for="Colecao" class="form-control" value="@Model.Colecao" />
                    <span asp-validation-for="Colecao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" value="@Model.Descricao" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" value="@Model.Preco" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagemUrl" class="control-label"></label>
                    <input asp-for="ImagemUrl" class="form-control" />
                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Atualizar" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col">
            <img src="@Html.DisplayFor(model => model.ImagemUrl)" class="img-thumbnail" alt="">
        </div>
    </div>
    <div>
        <a asp-action="List" type="button" class="btn btn-outline-dark">Voltar</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
